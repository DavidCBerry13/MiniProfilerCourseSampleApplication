@model IEnumerable<InvestmentManager.Core.Domain.InvestmentAccount>

@{
    ViewData["Title"] = "Index";
}

<h2>Investment Accounts</h2>


<table class="table">
    <thead>
        <tr>
            <th>Account Number</th>
            <th>Account Name</th>
            <th>Account Type</th>
            <th>City</th>
            <th>State</th>
            <th>Market Value</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @item.MarketValue.ToString("c")
            </td>
            <td>
                @Html.ActionLink("Details", "Details", "InvestmentAccounts",  new { accountNumber=item.AccountNumber }, new { @class = "btn btn-primary" })
            </td>
        </tr>
}
    </tbody>
</table>
